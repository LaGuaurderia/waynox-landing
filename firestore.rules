rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir lectura y escritura en la colección 'contactos' sin autenticación
    // Esto es necesario para que el formulario de contacto funcione
    match /contactos/{document} {
      allow read, write: if true;
    }
    
    // Reglas más restrictivas para otras colecciones (si las hay)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
