{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "types": ["node"],
    "baseUrl": "../",
    "paths": {
      "@/*": ["src/*"],
      "@lib/*": ["src/lib/*"],
      "@og/*": ["src/og/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "jsx": "react-jsx"
    }
  },
  "include": [
    "../src/**/*",
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
